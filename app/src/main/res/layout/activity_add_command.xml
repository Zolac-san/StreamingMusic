<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings.AddCommandActivity"
    android:background="#222222">

    <EditText
        android:id="@+id/addCommandWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="Word"
        android:inputType="text"
        android:textColor="#BBBBBB"
        android:textColorHint="#555555"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/addCommandBeforeWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="wordBefore"
        android:inputType="text"
        android:textColor="#BBBBBB"
        android:textColorHint="#555555"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addCommandWord" />

    <EditText
        android:id="@+id/addCommandAfterWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="wordAfter"
        android:textColor="#BBBBBB"
        android:textColorHint="#555555"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addCommandBeforeWord" />

    <Spinner
        android:id="@+id/addCommandListCommand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addCommandAfterWord"
        />

    <Button
        android:id="@+id/addCommandButtonRemoveTextWord"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:text="x"
        android:textColor="#888888"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/addCommandWord"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addCommandButtonRemoveTextBeforeWord"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:text="x"
        android:textColor="#888888"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/addCommandBeforeWord"
        app:layout_constraintTop_toBottomOf="@+id/addCommandButtonRemoveTextWord" />

    <Button
        android:id="@+id/addCommandButtonRemoveTextAfterWord"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:text="x"
        android:textColor="#888888"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/addCommandAfterWord"
        app:layout_constraintTop_toBottomOf="@+id/addCommandButtonRemoveTextBeforeWord" />

    <ImageView
        android:id="@+id/circle_logo_addCommand"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addCommandListCommand"
        app:srcCompat="@drawable/music_logo_512" />
</android.support.constraint.ConstraintLayout>